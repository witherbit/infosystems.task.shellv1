<UserControl x:Class="infosystems.task.shellv1.Controls.TestingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:infosystems.task.shellv1.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    <Border Background="#bbbbbb" CornerRadius="10">
        <StackPanel>
            <TextBlock Grid.Row="2" Text="Question" FontFamily="Arial"
Foreground="#1f1f1f"
VerticalAlignment="Center"
HorizontalAlignment="Left" Margin="10" FontSize="15" Name="uiQuestion" TextWrapping="WrapWithOverflow"/>
            <Grid Background="#1f1f1f" Height="1" Margin="10 0"/>
            <StackPanel x:Name="uiRadioButtons">
                
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
